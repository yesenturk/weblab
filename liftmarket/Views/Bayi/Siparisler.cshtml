@model IEnumerable<liftmarket.Models.SiparisDetay>

@{
    ViewBag.Title = "Siparişler";
}

<h2 style="margin:15px; 0px;">
    Siparişler
</h2>



<table class="table">
    <tr>
        <th>
            Sipariş No
        </th>
        <th>
            Adet
        </th>
        <th>
            ToplamTutar
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SiparisNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToplamTutar) ₺
            </td>
            <td>
                @Html.ActionLink("Sipariş Detayı", "OrderDetail", new { SiparisNo = item.SiparisNo })
            </td>
        </tr>
    }

</table>




