@using liftmarket.Models
@model List<RctTemp>

@{
    ViewBag.Title = "Ekle";
}

<h4>Reçete Ekle</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @foreach (var item in Model)
        {
            <div class="form-group">
                <p class="control-label col-md-2">@item.HammaddeAdi</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => item.NeKadar, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => item.NeKadar, "", new { @class = "text-danger" })
                </div>
            </div>
        }



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" id="btnEkle" class="btn btn-default" onclick="myFunction()" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye Geri Dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
